/* pages/order/order.wxss */
@import "../../styles/style.wxss";
@import "../icon/mall_icon.wxss";

/* 轮播图样式 */
.swiper-image {
  width: 100%;
  height: 350rpx;
}

.swiper-image image {
  width: 100%;
}
/* **************************** */
/* 左侧分类栏样式 */
/* 1. 设置整个页面的背景颜色 */

/* 2.主盒子 */
.menu {
  padding-top: 30rpx;
  padding-bottom: 100rpx;
  position: relative;
  /* margin-top: 40rpx; */
  height: 100%; 
  background: url("https://gimg2.baidu.com/image_search/src=http%3A%2F%2Fb-ssl.duitang.com%2Fuploads%2Fitem%2F201502%2F25%2F20150225031540_tfxZu.thumb.400_0.jpeg&refer=http%3A%2F%2Fb-ssl.duitang.com&app=2002&size=f9999,10000&q=a80&n=0&g=0n&fmt=jpeg?sec=1623649776&t=137373f5cd18f7a48a235457eac8640b") no-repeat padding-box;
  background-size: 100% 100%;
}

/* 3.左盒子*/
/* 3.1. 左侧栏主盒子总体设置 */
.nav_left {
  position: absolute;
  left: 0;
  width: 25%;
  /* 每个item所占的宽度 */
  color: #fff;
  font-weight: bold;
}

.nav_left.active {
  position: fixed;
  top: 20rpx
}

/* 搜索部分 */
.nav_left .search {
  display: flex;
  /* flex-direction: column; */
  align-items: center;
  height: 70rpx;
  margin-bottom: 20rpx;
  padding-left: 30rpx;
  /* border: 2px solid #fff; */
  border-radius: 10rpx;
  /* background-color: #fff; */
  text-shadow: 15rpx 15rpx 15rpx yellow;
}

.nav_left .search icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

/* 3.2. 左侧栏的每个item */
.nav_left .nav_left_items {
  display: flex;
  height: 70rpx;
  padding: 8rpx 0;
   /* 设置文字大小：14px */
  font-size: 14px;
  /* 垂直居中 */
  align-items: center;
  justify-content: center;
  border-radius: 0 10rpx 10rpx 0;
}

/* 3.3. 左侧栏list的item被选中时*/
.nav_left .nav_left_items.active {
  /* background: #fff; */
  /* 背景色变成白色 */
  color: #FF0000;
  /* 字体编程蓝色 */
  border-left: 3px solid #FF0000;
  /* 设置边框的宽度以及颜色 */
  font-weight: bold;
}

/* 购物车图标 */
.shop {
  position: fixed;
  left: 20rpx;
  bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #c3a768;
}
.shop .iconfont {
  font-size: x-large;
  color: #f5f5f5;
}
.shop .cartNum.active {
  position: absolute;
  top: -6rpx;
  right: -8rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  color: black;
  text-align: center;
  font-size: small;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(4rpx);
}


